<Window x:Class="CalendarTaskApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calendar Task Manager" Height="600" Width="800"
        Background="#1a1a1a" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="DarkBackground" Color="#1a1a1a"/>
        <SolidColorBrush x:Key="CardBackground" Color="#2d2d2d"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#ffffff"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#b3b3b3"/>
        <SolidColorBrush x:Key="BlueAccent" Color="#4285f4"/>
        <SolidColorBrush x:Key="RedAccent" Color="#ea4335"/>
        <SolidColorBrush x:Key="HoverBackground" Color="#3d3d3d"/>

        <!-- Calendar Day Button Style -->
        <Style x:Key="CalendarDayStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="Background" Fill="{TemplateBinding Background}" 
                                   Width="36" Height="36"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Background" Property="Fill" Value="{StaticResource HoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Selected Day Style -->
        <Style x:Key="SelectedDayStyle" TargetType="Button" BasedOn="{StaticResource CalendarDayStyle}">
            <Setter Property="Background" Value="{StaticResource BlueAccent}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Task Item Style -->
        <Style x:Key="TaskItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Add Button Style -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BlueAccent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3367d6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Calendar Section -->
        <Border Grid.Column="0" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Calendar Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" x:Name="PrevMonthBtn" Content="‹" 
                            Background="Transparent" Foreground="{StaticResource TextPrimary}" 
                            BorderThickness="0" FontSize="20" Width="30" Height="30"
                            Click="PrevMonth_Click"/>

                    <TextBlock Grid.Column="1" x:Name="MonthYearText" Text="September" 
                               Foreground="{StaticResource TextPrimary}" FontSize="24" 
                               FontWeight="SemiBold" HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="2" x:Name="NextMonthBtn" Content="›" 
                            Background="Transparent" Foreground="{StaticResource TextPrimary}" 
                            BorderThickness="0" FontSize="20" Width="30" Height="30"
                            Click="NextMonth_Click"/>
                </Grid>

                <!-- Day Headers -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="S" HorizontalAlignment="Center" 
                               Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                    <TextBlock Grid.Column="1" Text="M" HorizontalAlignment="Center" 
                               Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                    <TextBlock Grid.Column="2" Text="T" HorizontalAlignment="Center" 
                               Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                    <TextBlock Grid.Column="3" Text="W" HorizontalAlignment="Center" 
                               Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                    <TextBlock Grid.Column="4" Text="T" HorizontalAlignment="Center" 
                               Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                    <TextBlock Grid.Column="5" Text="F" HorizontalAlignment="Center" 
                               Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                    <TextBlock Grid.Column="6" Text="S" HorizontalAlignment="Center" 
                               Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                </Grid>

                <!-- Calendar Grid -->
                <UniformGrid Grid.Row="2" x:Name="CalendarGrid" Rows="6" Columns="7"/>

                <!-- Add Button -->
                <Button Grid.Row="3" x:Name="AddTaskBtn" Content="+" 
                        Style="{StaticResource AddButtonStyle}"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Margin="0,20,0,0" Click="AddTask_Click"/>
            </Grid>
        </Border>

        <!-- Tasks Section -->
        <Border Grid.Column="2" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Selected Date Header -->
                <TextBlock Grid.Row="0" x:Name="SelectedDateText" Text="Thursday 12" 
                           Foreground="{StaticResource TextPrimary}" FontSize="20" 
                           FontWeight="SemiBold" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" x:Name="TaskCountText" Text="3 tasks" 
                           Foreground="{StaticResource TextSecondary}" FontSize="14" 
                           Margin="0,0,0,20"/>

                <!-- Tasks List -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="TasksPanel">
                        <!-- Sample Tasks -->
                        <Border Style="{StaticResource TaskItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="{StaticResource BlueAccent}" 
                                        VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Meeting with Tom" Foreground="{StaticResource TextPrimary}" 
                                          FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource TaskItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="{StaticResource RedAccent}" 
                                        VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Submit report" Foreground="{StaticResource TextPrimary}" 
                                          FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource TaskItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="{StaticResource RedAccent}" 
                                        VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Buy groceries" Foreground="{StaticResource TextPrimary}" 
                                          FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Add Task Dialog (Initially Hidden) -->
        <Border x:Name="AddTaskDialog" Grid.ColumnSpan="3" Background="#80000000" 
                Visibility="Collapsed">
            <Border Background="{StaticResource CardBackground}" CornerRadius="12" 
                    Width="400" Height="300" HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Add task" Foreground="{StaticResource TextPrimary}" 
                               FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

                    <TextBlock Grid.Row="1" Text="Task name" Foreground="{StaticResource TextSecondary}" 
                               FontSize="12" Margin="0,0,0,5"/>

                    <TextBox Grid.Row="2" x:Name="TaskNameInput" Background="#3d3d3d" 
                             Foreground="{StaticResource TextPrimary}" BorderThickness="0" 
                             Padding="10" FontSize="14" Margin="0,0,0,15"/>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="🕐" Foreground="{StaticResource TextSecondary}" 
                                  FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>

                        <ComboBox x:Name="HourComboBox" Background="#3d3d3d" 
                                 Foreground="{StaticResource TextPrimary}" BorderThickness="0" 
                                 Width="50" Height="30" Margin="0,0,5,0"/>

                        <TextBlock Text=":" Foreground="{StaticResource TextSecondary}" 
                                  FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>

                        <ComboBox x:Name="MinuteComboBox" Background="#3d3d3d" 
                                 Foreground="{StaticResource TextPrimary}" BorderThickness="0" 
                                 Width="50" Height="30" Margin="0,0,10,0"/>

                        <ComboBox x:Name="AmPmComboBox" Background="#3d3d3d" 
                                 Foreground="{StaticResource TextPrimary}" BorderThickness="0" 
                                 Width="50" Height="30" Margin="0,0,20,0"/>

                        <Border x:Name="RedColorOption" Background="{StaticResource RedAccent}" CornerRadius="6" 
                               Width="20" Height="20" Margin="0,0,5,0" Cursor="Hand" 
                               MouseDown="ColorOption_Click" Tag="#ea4335"/>
                        <Border x:Name="OrangeColorOption" Background="#ff9800" CornerRadius="6" 
                               Width="20" Height="20" Margin="0,0,5,0" Cursor="Hand"
                               MouseDown="ColorOption_Click" Tag="#ff9800"/>
                        <Border x:Name="GreenColorOption" Background="#4caf50" CornerRadius="6" 
                               Width="20" Height="20" Cursor="Hand"
                               MouseDown="ColorOption_Click" Tag="#4caf50"/>
                    </StackPanel>

                    <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Cancel" Background="Transparent" 
                                Foreground="{StaticResource TextSecondary}" BorderThickness="0" 
                                Padding="20,10" Click="CancelTask_Click"/>

                        <Button Grid.Column="2" Content="Save" Background="{StaticResource BlueAccent}" 
                                Foreground="White" BorderThickness="0"
                                Padding="20,10" Click="SaveTask_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3367d6"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>